{
    "compilerOptions": {
        // "target": "es3",
        "module": "CommonJS",
        // "target": "esnext",
        "skipLibCheck": true,
        // "noEmit": true,
        // "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strict": true,
        "checkJs": true,
        "isolatedModules": true,
        "types": ["node"],
        "declaration": true,
        "outDir": ".",
        // "lib": ["es2015", "dom"],
        // "inlineSourceMap": true,
        // "incremental": true,
    },
    "include": ["src"],
    "exclude": ["node_modules", ".yarn", ".history", ".git", ".github", ".vscode", "__tests__", "ts-declarations"],
}
