{
    "name": "@markmctamney/eslint-config",
    "version": "1.0.3",
    "main": "dist/default.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/markmctamney/eslint-config-markmctamney.git"
    },
    "author": "Mark McTamney <30511006+markmctamney@users.noreply.github.com>",
    "license": "MIT",
    "types": "dist/index.d.ts",
    "scripts": {
        "packages": "./install-packages.sh",
        "lint": "eslint .",
        "lint:fix": "yarn lint --fix",
        "test": "echo \"No tests set up yet.\" && exit 0",
        "publish": "yarn npm publish",
        "release": "gh release create $npm_package_version",
        "ci": "yarn install",
        "tc": "yarn tsc --noEmit",
        "build": "yarn build:files; yarn build:types;",
        "clean": "rm -rf ./dist",
        "build:clean": "yarn clean; yarn build;",
        "build:files": "yarn tsc",
        "build:types": "yarn tsc -p tsconfig.declarations.json"
    },
    "keywords": [
        "eslint-config",
        "expo",
        "react-native",
        "typescript",
        "json",
        "yaml",
        "prettier",
        "imports",
        "graphql"
    ],
    "files": [
        "dist",
        "dist/shared"
    ],
    "peerDependencies": {
        "@babel/core": ">=7.16",
        "@babel/eslint-parser": "*",
        "@types/react": "*",
        "@types/react-native": "*",
        "eslint": ">=8",
        "graphql": ">=16",
        "prettier": ">=2.5"
    },
    "devDependencies": {
        "@babel/core": "^7.17.5",
        "@babel/eslint-parser": "^7.17.0",
        "@babel/eslint-plugin": "^7.16.5",
        "@types/babel__core": "^7.1.18",
        "@types/node": "^17.0.21",
        "@types/prettier": "^2.4.4",
        "@types/react": "^17.0.39",
        "@types/react-native": "^0.66.16",
        "eslint": "^8.9.0",
        "eslint-plugin-node": "^11.1.0",
        "graphql": "^16.3.0",
        "prettier": "^2.5.1",
        "typescript": "^4.5.5"
    },
    "dependencies": {
        "@next/eslint-plugin-next": "^12.1.0",
        "@typescript-eslint/eslint-plugin": "^5.12.1",
        "@typescript-eslint/parser": "^5.29.0",
        "eslint-config-prettier": "^8.4.0",
        "eslint-config-universe": "^10.0.0",
        "eslint-import-resolver-typescript": "^2.5.0",
        "eslint-plugin-graphql": "^4.0.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-json-format": "^2.0.1",
        "eslint-plugin-json-schema-validator": "^2.3.5",
        "eslint-plugin-jsonc": "^2.2.1",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-monorepo": "^0.3.2",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.28.0",
        "eslint-plugin-react-hooks": "^4.3.0",
        "eslint-plugin-react-native": "^4.0.0",
        "eslint-plugin-yaml": "^0.5.0",
        "jsonc-eslint-parser": "^2.1.0",
        "ts-deepmerge": "^2.0.1"
    },
    "peerDependenciesMeta": {
        "@babel/core": {
            "optional": true
        },
        "@babel/eslint-parser": {
            "optional": true
        },
        "graphql": {
            "optional": true
        },
        "prettier": {
            "optional": true
        }
    },
    "packageManager": "yarn@3.2.0"
}
