{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["dom", "es6", "es2016.array.include", "es2017.object", "esnext"],
        "skipLibCheck": true,
        "noEmit": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strict": true,
        "checkJs": true,
        // "isolatedModules": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "types": ["node"]
    },
    "include": ["src", "*.js"],
    "exclude": ["node_modules", ".history"]
}
